<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 标题 -->
        <TextView
            android:id="@+id/titleTextView"
            android:text="随机抽选器 v1.2"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- 分割线（在标题下） -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:background="#22000000" />

        <!-- 抽中结果：移到“选择表”上方，并加大字体 -->
        <TextView
            android:id="@+id/resultTextView"
            android:text=" "
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 分割线（在抽取结果下） -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#22000000" />
        <!-- 抽取按钮 -->
        <Button
            android:id="@+id/pickButton"
            android:text="开始抽取！"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 多表选择（保持原来功能不变） -->
        <Spinner
            android:id="@+id/tableSpinner"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <!-- 不重复抽取 开关 -->
        <CheckBox
            android:id="@+id/noRepeatCheck"
            android:layout_marginTop="2dp"
            android:text="不重复抽取"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- 已抽到（持久化） -->
        <TextView
            android:layout_marginTop="5dp"
            android:text="已抽到："
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/drawnListText"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- 分割线（在标题下） -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#22000000" />
        <!-- 编辑区（用逗号分隔） -->
        <EditText
            android:id="@+id/inputEditText"
            android:hint="在此输入表项，用逗号分隔（用于新建/编辑表），长按表删除"
            android:minHeight="100dp"
            android:gravity="top|start"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/saveAsNewTableButton"
                android:text="保存为新表"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/overwriteTableButton"
                android:text="覆盖当前表"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/setDefaultButton"
                android:text="设为默认表"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/resetDrawnButton"
                android:text="清空已抽到"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>
